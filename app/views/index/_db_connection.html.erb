<table border="1" rules="all">
  <tr>
    <th>Adapter</th>
    <th>Host</th>
    <th>Port</th>
    <th>Database name</th>
    <th>User</th>
    <th>Password</th>
  </tr>
  <tr>
    <td>
      <select id="database_adapter" name="adapter">
        <option value="mysql2">MySQL</option>
        <option value="postgresql">PostgreSQL</option>
     </select>
    </td>
    <td><%= text_field_tag :host, "localhost", id: "db_connection_host", size: "30" %></td>
    <td><%= text_field_tag :port, "3306", id: "db_connection_port", size: 6 %></td>
    <td><%= text_field_tag :database, "", id: "db_connection_database", size: 20 %></td>
    <td><%= text_field_tag :username, "", id: "db_connection_user", size: 10 %></td>
    <td><%= password_field_tag :password, "", size: 10 %></td>
  </tr>
</table>
