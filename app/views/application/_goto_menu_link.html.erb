<div class="pager-box">
  <ul class="pager">
    <li>
<% if @work %>
      <%= link_to menu_path(@work.id) do %>
	<i class="fa fa-angle-left"></i>Menu
      <% end %>
<% else %>
      <%= link_to menu_index_path do %>
	<i class="fa fa-angle-left"></i>Menu
      <% end %>
<% end %>
